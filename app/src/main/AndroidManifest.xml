<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="ru.noties.scrollable.sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--used for WebView-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".next.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".next.SampleListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ScrollableInsideFragmentActivity"/>

        <activity android:name=".next.pager.fragment.FragmentPagerActivity"/>
        <activity android:name=".next.overscroll.custompullrefresh.CustomOverScrollActivity"/>
        <activity android:name=".next.swiperefresh.SwipeRefreshActivity"/>
        <activity android:name=".next.manual.ManualControlActivity"/>
        <activity android:name=".next.pager.view.ViewPagerActivity"/>
        <activity android:name=".next.scrollheader.ScrollHeaderActivity"/>

    </application>

</manifest>
