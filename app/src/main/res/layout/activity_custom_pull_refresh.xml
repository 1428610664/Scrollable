<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <View
        android:id="@+id/custom_over_scroll_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_over_scroll_height"
        android:background="@color/md_teal_500"/>

    <ru.noties.scrollable.ScrollableLayout
        android:id="@+id/scrollable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scrollable_defaultCloseUp="true"
        app:scrollable_maxScroll="@dimen/header_height">

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/md_teal_300"
            android:padding="16dip"
            android:text="@string/sample_title_over_scroll_custom"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ru.noties.scrollable.ScrollableLayout>

    <View
        android:id="@+id/over_scroll_header"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_gravity="center_horizontal"
        android:translationY="-80dip"
        tools:background="@drawable/bg_progress_bar"
        tools:translationY="0dip"/>

</FrameLayout>